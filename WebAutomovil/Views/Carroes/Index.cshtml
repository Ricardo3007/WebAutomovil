@model IEnumerable<WebAutomovil.Models.Carro>

@{
    ViewData["Title"] = "Index";
}

<h1>Carros</h1>

<p>
    <a asp-action="Create">Crear Nuevo Carro</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaCreacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
 
            <th></th>
        </tr>
    </thead>
    <tbody>
@if(Model.Count() > 0){
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MarcaNavigation.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaCreacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
           
            <td>
                <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.Id">Detalles</a>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Modificar</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
    }
} else
{
    <tr><td colspan="4" class="text-center">No existen Registros</td></tr>           
}
    </tbody>
</table>
