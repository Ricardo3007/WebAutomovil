@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="d-flex justify-content-center"> 
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style="max-width: 500px; max-height: 300px;">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="@Url.Content("~/img/kia_forte_2024.png")" alt="First slide" style="max-width: 500px; max-height: 300px;">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="@Url.Content("~/img/kia2.png")" alt="Second slide" style="max-width: 500px; max-height: 300px;">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="@Url.Content("~/Img/kia_rio.jpg")" alt="Third slide" style="max-width: 500px; max-height: 300px;">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    @* <h1 class="display-4">Bienvenido</h1> *@
    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Marcas</h5>
                    <p class="card-text">Gestionar todo lo que tenga que ver con las marcas de carro.</p>
                    <a asp-controller="Marcas" asp-action="Index" class="btn btn-primary">Ir</a>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Carros</h5>
                    <p class="card-text">Gestionar todo lo que tenga que ver con los carro.</p>
                    <a asp-controller="Carroes" asp-action="Index" class="btn btn-primary">Ir</a>
                </div>
            </div>
        </div>

        <div class="col-sm-6 mt-2">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Clientes</h5>
                    <p class="card-text">Gestionar todo lo que tenga que ver con el cliente.</p>
                    <a asp-controller="Clientes" asp-action="Index" class="btn btn-primary">Ir</a>
                </div>
            </div>
        </div>
        <div class="col-sm-6 mt-2">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Relación</h5>
                    <p class="card-text">Se asignan los carros a los clientes correspondientes.</p>
                    <a asp-controller="Clientes" asp-action="ListarAsignacion" class="btn btn-primary">Ir</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
